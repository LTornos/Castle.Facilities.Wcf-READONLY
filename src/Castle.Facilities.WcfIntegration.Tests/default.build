<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="Castle.Facilities.WcfIntegration.Tests"
	default="test"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="common.scripts.dir" value="../../buildscripts/" />
	<include buildfile="${common.scripts.dir}/common-project.xml" />

	<target name="init" depends="common.init">
		<property name="assembly.version" value="1.0.3.0" />
		<property name="assembly.is-cls-compliant" value="false" />
		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="nunit.framework.dll"/>
			<include name="Castle.Facilities.WcfIntegration.dll" />
			<include name="Castle.Facilities.WcfIntegration.Demo.dll" />
			<include name="Castle.Services.Logging.Log4netIntegration.dll" />
			<include name="Castle.Facilities.Logging.dll" />
			<include name="log4net.dll" />
			<include name="Castle.DynamicProxy2.dll" />
			<include name="Castle.Core.dll" />
			<include name="Castle.MicroKernel.dll" />
			<include name="Castle.Windsor.dll" />
			<include name="System.ServiceModel.dll" />
			<include name="System.Runtime.Serialization.dll" />
		</assemblyfileset>
	</target>

	<target name="test" depends="init common.compile-tests common.run-tests" description="Runs the tests" />

</project>